---
const { image = '/images/placeholders/placeholder.png', title, tags = [], href = '#' } = Astro.props;
---
<a href={href} class="block border rounded overflow-hidden">
  <img src={image} alt="" class="w-full h-32 object-cover" />
  <div class="p-4">
    <h3 class="text-lg font-semibold">{title}</h3>
    <div class="text-xs text-neutral-muted">{tags.join(', ')}</div>
  </div>
</a>
