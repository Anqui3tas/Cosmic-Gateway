<div class="absolute inset-0 overflow-hidden">
  <div class="stars"></div>
  <style>
    .stars{width:200%;height:200%;background:radial-gradient(white,transparent) 1px 1px/3px 3px repeat;animation:move 60s linear infinite;}
    @keyframes move{from{transform:translate3d(0,0,0);}to{transform:translate3d(-50%,-50%,0);}}
    @media (prefers-reduced-motion){.stars{animation:none;}}
  </style>
</div>